<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.shape.Rectangle?>

<StackPane prefHeight="800.0" prefWidth="1280.0" styleClass="root" stylesheets="@../styles/app.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="easv.dk.belsign.gui.LoginControllers.MainLoginController">
    <!-- Background photo -->
    <ImageView fx:id="backgroundImage" fitHeight="800" fitWidth="1280" opacity="0.46" preserveRatio="true">
      <image>
         <Image url="@../../images/mainbg.jpg" />
      </image></ImageView>

    <!-- Slight dimming overlay so the logo & button stand out -->
    <Rectangle fill="#00000055" height="800" opacity="0.0" width="1280" />   <!-- 55 â‰ˆ 33 % opacity -->

    <VBox alignment="CENTER" prefHeight="570.0" prefWidth="1280.0" spacing="40.0">
        <ImageView fx:id="logoImage" fitHeight="172.0" fitWidth="188.0" preserveRatio="true">
            <image>
                <Image url="@../../images/mainlogo.png" />
            </image>
        </ImageView>
        <Button fx:id="scanButton" onAction="#onClickScanBtn" prefHeight="48" prefWidth="160" style="-fx-font-size: 16px; -fx-font-weight: bold;" styleClass="primary-btn" stylesheets="@../styles/app.css" text="Scan Code">
            <VBox.margin>
                <Insets />
            </VBox.margin>
        </Button>
        <!-- Spacer to push the line to the bottom -->
        <Region prefHeight="133.0" prefWidth="1280.0" VBox.vgrow="ALWAYS" />
        <Line fx:id="swipeLine" endX="100.0"
              onMousePressed="#handleLineMousePressed"
              onMouseReleased="#handleLineMouseReleased"
              onSwipeUp="#swipeToLogin" startX="-100.0" stroke="WHITE" strokeWidth="10.0">
            <VBox.margin>
                <Insets bottom="10.0" />
            </VBox.margin>
        </Line>
        <StackPane.margin>
            <Insets top="260.0" />
        </StackPane.margin>
    </VBox>

</StackPane>
