<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="easv.dk.belsign.gui.AdminControllers.AdminController"
            prefHeight="768.0" prefWidth="1024.0">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 10; -fx-background-color: #2C3E50;">
            <Label text="Belman Admin Console" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" />
        </HBox>
    </top>

    <!-- Left navigation pane -->
    <left>
        <VBox spacing="5" style="-fx-padding: 10; -fx-background-color: #ECF0F1;" prefWidth="200">
            <children>
                <Label text="Navigation" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
                <Button fx:id="usersNavButton" text="User Management" maxWidth="Infinity" />
                <Button fx:id="logsNavButton" text="System Logs" maxWidth="Infinity" />
                <Button fx:id="settingsNavButton" text="Settings" maxWidth="Infinity" />
            </children>
        </VBox>
    </left>

    <!-- Center content area -->
    <center>
        <StackPane fx:id="contentPane" style="-fx-padding: 10;">
            <!-- User Management View -->
            <AnchorPane fx:id="usersPane" prefWidth="824" prefHeight="748">
                <children>
                    <TableView fx:id="usersTable" prefWidth="800" prefHeight="600">
                        <columns>
                            <TableColumn fx:id="usernameColumn" text="Username" prefWidth="200" />
                            <TableColumn fx:id="roleColumn" text="Role" prefWidth="200" />
                            <TableColumn fx:id="actionColumn" text="Actions" prefWidth="200" />
                        </columns>
                    </TableView>
                    <Button fx:id="addUserButton" text="Add New User" layoutX="650" layoutY="620" />
                </children>
            </AnchorPane>

            <!-- System Logs View -->
            <AnchorPane fx:id="logsPane" prefWidth="824" prefHeight="748" visible="false">
                <children>
                    <TableView fx:id="logsTable" prefWidth="800" prefHeight="650">
                        <columns>
                            <TableColumn fx:id="timestampColumn" text="Timestamp" prefWidth="200" />
                            <TableColumn fx:id="eventColumn" text="Event" prefWidth="400" />
                            <TableColumn fx:id="userColumn" text="User" prefWidth="200" />
                        </columns>
                    </TableView>
                </children>
            </AnchorPane>

            <!-- Settings View -->
            <AnchorPane fx:id="settingsPane" prefWidth="824" prefHeight="748" visible="false">
                <children>
                    <GridPane hgap="10" vgap="10" style="-fx-padding: 20;">

                        <columnConstraints>
                            <ColumnConstraints halignment="RIGHT" prefWidth="150" />
                            <ColumnConstraints halignment="LEFT" prefWidth="500" />
                        </columnConstraints>
                        <children>
                            <Label text="Email SMTP Server:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                            <TextField fx:id="smtpServerField" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="350" />

                            <Label text="SMTP Port:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                            <TextField fx:id="smtpPortField" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="100" />

                            <Label text="Report Template Path:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                            <TextField fx:id="templatePathField" GridPane.rowIndex="2" GridPane.columnIndex="1" prefWidth="350" />

                            <Button fx:id="saveSettingsButton" text="Save Settings" GridPane.rowIndex="3" GridPane.columnIndex="1" />
                        </children>
                    </GridPane>
                </children>
            </AnchorPane>
        </StackPane>
    </center>

</BorderPane>
