<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<AnchorPane prefHeight="800.0" prefWidth="480.0" styleClass="background" stylesheets="@../styles/style-1.css" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="easv.dk.belsign.gui.controllers.Operator.CameraController">
    <children>
        <GridPane fx:id="photoGridPane" alignment="CENTER" hgap="15" vgap="15" AnchorPane.bottomAnchor="200.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="100.0">
            <!-- Photo blocks will be added dynamically in the CameraController class -->
        </GridPane>
        <!-- Add Extra Photo Button -->
        <HBox alignment="CENTER" spacing="10" AnchorPane.bottomAnchor="150.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
            <Button onAction="#handleAddExtraPhoto" prefWidth="180" text="Add Extra Photo" />
        </HBox>
        <!-- Operator Name Field -->
        <HBox alignment="CENTER" spacing="10" AnchorPane.bottomAnchor="100.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
            <Label text="Operator:" />
            <TextField fx:id="operatorNameField" prefWidth="200" promptText="Type your name..." />
        </HBox>
        <!-- Upload Button -->
        <HBox alignment="CENTER" spacing="10" AnchorPane.bottomAnchor="40.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
            <Button onAction="#uploadImages" prefWidth="200" text="Upload Photos" />
        </HBox>
        <Button fx:id="backButton"
                onAction="#onBackClick"
                style="-fx-background-color: transparent;"
                AnchorPane.topAnchor="10.0"
                AnchorPane.rightAnchor="10.0"
                pickOnBounds="true">
            <graphic>
                <FontIcon iconLiteral="bi-arrow-right-square-fill" iconSize="20" rotate="180"/>
            </graphic>
        </Button>
    </children>
</AnchorPane>
