<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="800.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="easv.dk.belsign.gui.QAControllers.qaOrderlistController">
    <!-- ===== TOP HEADER BAR ===== -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #FFFFFF; -fx-padding: 15 25 15 25; -fx-border-color: #e6e6e6; -fx-border-width: 0 0 1 0;">
            <!-- Logo -->
            <ImageView fx:id="logoImage" fitHeight="40" fitWidth="98.0" preserveRatio="true">
                <image>
                    
                </image>
            </ImageView>

            <!-- Welcome text -->
            <Label fx:id="welcomeLabel" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Welcome back, Name!" />

            <Region HBox.hgrow="ALWAYS" />

            <!-- Header icons placeholder -->
            <HBox spacing="15">
                <Button fx:id="settingsButton" styleClass="icon-btn" />
                <Button fx:id="notificationButton" styleClass="icon-btn" />
                <ImageView fx:id="avatarImage" fitHeight="36" fitWidth="36" style="-fx-background-radius: 18; -fx-clip: circle;" />
                <Button fx:id="logoutButton" styleClass="logout-btn" text="Logout" />
            </HBox>
        </HBox>
    </top>

    <!-- ===== CENTER CONTENT ===== -->
    <center>
        <VBox spacing="15" style="-fx-background-color: #E3E3E3; -fx-padding: 20;">

            <!-- Filters row -->
            <HBox spacing="10" style="-fx-background-color: #FFFFFF;">
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Orders" />
            </HBox>

            <HBox spacing="10" style="-fx-background-color: #FFFFFF;">
                <ComboBox fx:id="orderIdFilter" prefWidth="120" promptText="Order ID" />
                <TextField fx:id="searchField" prefWidth="200" promptText="Search" />
                <ComboBox fx:id="statusFilter" prefWidth="150" promptText="Status" />
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="createOrderButton" styleClass="primary-btn" text="Create order" />
            </HBox>

            <!-- Column titles (GridPane) -->
            <GridPane hgap="10" style="-fx-padding: 8 0 8 0; -fx-background-color: #ffffff; -fx-border-color: #d6d6d6; -fx-border-width: 0 0 1 0;">
                <columnConstraints>
                    <ColumnConstraints prefWidth="130" /> <!-- Order ID -->
                    <ColumnConstraints prefWidth="170" /> <!-- Description -->
                    <ColumnConstraints prefWidth="120" /> <!-- Create Date -->
                    <ColumnConstraints prefWidth="150" /> <!-- Operator -->
                    <ColumnConstraints prefWidth="160" /> <!-- Product Photo -->
                    <ColumnConstraints prefWidth="120" /> <!-- Status -->
                    <ColumnConstraints prefWidth="120" /> <!-- Update Date -->
                    <ColumnConstraints hgrow="ALWAYS" />   <!-- Button / Flex -->
                </columnConstraints>

                <children>
                    <Label alignment="CENTER" styleClass="col-title" text="ORDER ID" GridPane.columnIndex="0" />
                    <Label styleClass="col-title" text="DESCRIPTION" GridPane.columnIndex="1" />
                    <Label styleClass="col-title" text="CREATE DATE" GridPane.columnIndex="2" />
                    <Label styleClass="col-title" text="OPERATOR" GridPane.columnIndex="3" />
                    <Label styleClass="col-title" text="PRODUCT PHOTO" GridPane.columnIndex="4" />
                    <Label styleClass="col-title" text="STATUS" GridPane.columnIndex="5" />
                    <Label styleClass="col-title" text="UPDATE DATE" GridPane.columnIndex="6" />
                </children>
            <rowConstraints>
               <RowConstraints />
            </rowConstraints>
            </GridPane>

        <!-- CARD LIST -->
        <VBox spacing="5">

            <!-- Card 1 -->
            <GridPane hgap="10" style="-fx-background-color: #f9f9f9; -fx-padding: 10; -fx-border-color: lightgrey; -fx-border-radius: 5;" vgap="5">
                <columnConstraints>
                    <ColumnConstraints prefWidth="130" /> <!-- Order ID -->
                    <ColumnConstraints prefWidth="170" /> <!-- Description -->
                    <ColumnConstraints prefWidth="120" /> <!-- Create Date -->
                    <ColumnConstraints prefWidth="150" /> <!-- Operator -->
                    <ColumnConstraints prefWidth="160" /> <!-- Product Photo -->
                    <ColumnConstraints prefWidth="120" /> <!-- Status -->
                    <ColumnConstraints prefWidth="120" /> <!-- Update Date -->
                    <ColumnConstraints hgrow="ALWAYS" />   <!-- Button / Flex -->
                </columnConstraints>
               <Label text="45042025001" />

                <Label text="LA1BTID no 71" GridPane.columnIndex="1" />
                <Label text="20 April 2025" GridPane.columnIndex="2" />
                <Label text="by Donna Nielsen" GridPane.columnIndex="3" />
               <ImageView fitHeight="150.0" fitWidth="162.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="4" />
               <ComboBox prefWidth="150.0" GridPane.columnIndex="5" />
                <Label text="27 April 2025" GridPane.columnIndex="6" />
               <Button mnemonicParsing="false" text="Button" GridPane.columnIndex="7" />
               <rowConstraints>
                  <RowConstraints />
               </rowConstraints>
            </GridPane>
        </VBox>


            <!-- Pagination -->
            <HBox alignment="CENTER" spacing="6" style="-fx-padding: 10;">
                <Label fx:id="pageInfoLabel" text="Showing page 1 of 4" />
                <Region HBox.hgrow="ALWAYS" />
                <ToggleButton selected="true" text="1" />
                <ToggleButton text="2" />
                <ToggleButton text="3" />
                <ToggleButton text="4" />
            </HBox>
        </VBox>
    </center>


</BorderPane>
